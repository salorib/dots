configuration {
	modes: "window,drun,run,ssh";
	font: "JetBrainsMono Nerd 24";
	show-icons: true;
	terminal: "rofi-sensible-terminal";
	combi-modes: "window,drun,ssh";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
/* Dark theme. */
@import "~/.cache/wal/colors-rofi-dark"
